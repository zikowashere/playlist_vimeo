{% extends 'base.html.twig' %}

{% block body %}

    <h1>Connectez-vous!</h1>

    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey | trans(error.messagedata, 'security') }}
        </div>
    {% endif %}


    <form action="{{ path('userlogin') }}" method="post">
        <div class="form-group">
            <input type="text" class="form-control" name="_username" required placeholder="Email" value="{{ lastUserName }}">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" name="_password" required placeholder="Password">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Login</button>
        </div>
    </form>

    <a href="{{ path('inscription') }}">Not registered yet ?</a>
{% endblock %}
